<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campusmail.mapper.ContactMapper">
    <resultMap id="ContactResult" type="com.campusmail.entity.Contact">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="contactName" column="contact_name"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="notes" column="notes"/>
    </resultMap>

    <insert id="insert" parameterType="com.campusmail.entity.Contact">
        INSERT INTO contact (id, user_id, contact_name, email, phone, notes)
        VALUES (#{id}, #{userId}, #{contactName}, #{email}, #{phone}, #{notes})
    </insert>

    <update id="update" parameterType="com.campusmail.entity.Contact">
        UPDATE contact
        SET contact_name = #{contactName}, email = #{email}, phone = #{phone}, notes = #{notes}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM contact WHERE id = #{id}
    </delete>

    <select id="findById" resultMap="ContactResult">
        SELECT * FROM contact WHERE id = #{id}
    </select>

    <select id="findByUserId" resultMap="ContactResult">
        SELECT * FROM contact WHERE user_id = #{userId}
    </select>

    <select id="search" resultMap="ContactResult">
        SELECT * FROM contact 
        WHERE user_id = #{userId}
        AND (contact_name LIKE CONCAT('%', #{keyword}, '%') 
             OR email LIKE CONCAT('%', #{keyword}, '%'))
        LIMIT 20
    </select>
</mapper>
